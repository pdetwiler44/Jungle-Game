		cout << endl;
	}

	else if( (temp == "look west") || (temp == "examine west") ){
		cout << "You see a big tree over yonder." << endl;
		cout << endl;
	}

    else if((temp == "look at vegetation") || (temp == "look vegetation") || (temp == "examine vegetation") || (temp == "vegetation") ){ 
        cout << "Dayum, that is some dense vegetation" << endl;
		cout << endl;
	}

	else if((temp == "listen spider monkeys") || (temp == "listen to spider monkeys")){
		cout << "Spider monkeys laugh at you. Do something else." << endl;
		cout << endl;
	}

	else{
		cout << "Not a valid command" << endl;
		cout << endl;
	}
	
	}
     system("pause");
     return 0;

}